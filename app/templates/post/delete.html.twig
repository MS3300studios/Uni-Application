{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.post_delete'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.post_delete'|trans({'%id%': post.id|default('')}) }}</h1>
    <h2>{{ post.title }}</h2>
    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ post.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  post.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{  post.content}}</dd>
            <dt>{{ 'label.createdAt'|trans }}</dt>
            <dd>{{ post.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{ post.postCategory.name }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('post_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
